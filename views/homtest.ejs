<!DOCTYPE html>
 <html>
    <head>
        <title>StorePAge</title>
        <meta name ="description" content ="This is the description">
        <link rel ="stylesheet" href="style.css"/>
        <script src="https://checkout.stripe.com/checkout.js" defer></script>
        <script>
            var stripePublicKey = '<%= stripePublicKey%>'
        </script>
        <script src="store.js" defer></script>
    </head>
    <body>
        <header class="main-header">
            <nav class ="nav main-nav">
                <ul>
                    <ul>
                        <li><a href= "/homepage">HOME</a></li>
                        <li><a href= "/about">ABOUT</a></li>
                        <li><a href= "/myorders">MyOrders</a></li>
                        <li><a href= "/admin">ADMIN</a></li>
                        <li><a href= "/login">LOG OUT</a></li>
                    </ul>
                </ul>
            </nav>
            <h1 class="srore-name store-name-large">Online Store</h1>
        </header>
        
        <div id="search-container">
            <input type="text" id="search-input" placeholder="Search for products...">
            <button id="search-button" onclick="searchProducts()">Search</button>
            
            <div id="results-container"></div>
            <br>
            <hr>
            <!-- <div class="recommendations" id="recommendationList">
            </div> -->
        </div>
        <h1 class="section-header">Recommendation</h1>
        <div class="recommendations" id="recommendationList">
            
            <!-- Recommendations will be displayed here -->
        </div>

        
        

        <section class ="container content-section">
            <h2 class="section-header">Meals</h2>
            <div class="shop-items">
                <% items.meals.forEach(function(item){ %>  
                    <div class= "shop-item" data-item-id="<%= item.product_id %>">
                        <span class="shop-item-title"><%= item.product_name %></span>
                        <img class="shop-item-image" src = <%= item.product_image %> width="200" height="200">
                        <div class="shop-item-details">
                            <span class="shop-item-price">$<%= parseInt(item.product_price) /100 %></span>
                            <button class="btn btn-primary shop-item-button" type="button">ADDTO CART</button>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>
        <section class ="container content-section">
            <h2 class="section-header">Drinks</h2>
            <div class="shop-items">
                   <% items.drinks.forEach(function(item){ %>  
                    <div class= "shop-item" data-item-id="<%= item.product_id %>">
                        <span class="shop-item-title"><%= item.product_name %></span>
                        <img class="shop-item-image" src = <%= item.product_image %> width="200" height="200">
                        <div class="shop-item-details">
                            <span class="shop-item-price">$<%= parseInt(item.product_price)/100 %></span>
                            <button class="btn btn-primary shop-item-button" type="button">ADDTO CART</button>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>
        <section class="container content-section">
            <h2 class="section-header">CART</h2>
            <div class="cart-row">
                <span class="cart-item cart-header cart-column">ITEM</span>
                <span class="cart-price cart-header cart-column">PRICE</span>
                <span class="cart-quantity cart-header cart-column">QUANTITY</span>
            </div>
            <div class="cart-items">
            </div>
            <div class="cart-total">
                <strong class="cart-total-title">TOTAL</strong>
                <span class="cart-total-price">$0</span>
            </div>
            <button class="btn btn-primary btn-purchase" type="button">PURCHASE</button>
        </section>
        <footer class="footer">
            <h3>Online Food Market</h3>
            <ul>
                <li><img src = "#"></li>
                <li><img src = "#"></li>
                <li><img src = "#"></li>
            </ul>
        </footer>
    </body>
 </html>